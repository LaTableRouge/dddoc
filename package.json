{
  "name": "doc",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start --host 0.0.0.0 --poll 1000",
    "build": "docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve --host 0.0.0.0",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "prepare": "husky",
    "lint:md": "npx markdownlint-cli2 --config linters/.markdownlint.json --fix */**/*.md !**/node_modules/** !**/vendor/**"
  },
  "dependencies": {
    "@docusaurus/core": "3.9.2",
    "@docusaurus/preset-classic": "3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@easyops-cn/docusaurus-search-local": "^0.52.2",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "3.9.2",
    "@docusaurus/types": "3.9.2",
    "@babel/runtime": "^7.28.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-yml": "^1.19.0",
    "git-precommit-checks": "^3.1.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.19.1",
    "prettier": "^3.6.2",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "**/*.md": [
      "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write",
      "npx markdownlint-cli2 --config linters/.markdownlint.json --fix"
    ],
    "**/*.{yml,yaml}": [
      "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write"
    ],
    "**/*.json": [
      "npx prettier --config linters/prettier.config.js --ignore-path linters/.prettierignore --no-error-on-unmatched-pattern --write"
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main|master|dev|pre)$|^(feature|fix|hotfix|experimental|minor|major|release)/.+$",
    "errorMsg": "ðŸ¤¨ The branch you're trying to push doesn't respect our conventions, you can rename it with `git branch -m <current-name> <new-name>`"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "docs",
          "feat",
          "fix",
          "refactor",
          "revert",
          "style",
          "wordpress",
          "wp"
        ]
      ]
    }
  },
  "git-precommit-checks": {
    "display": {
      "notifications": true,
      "offendingContent": true,
      "rulesSummary": false,
      "shortStats": true,
      "verbose": false
    },
    "rules": [
      {
        "message": "Have you forgotten to finish some tasks?",
        "nonBlocking": true,
        "regex": "/(?:FIXME|TODO)/"
      },
      {
        "message": "You have conflict markers lying around",
        "regex": "/^[<>|=]{4,}/m"
      },
      {
        "message": "Commit stopped: you've entered information that must not be committed!",
        "regex": "/do not commit/i"
      },
      {
        "filter": "/\\.js$/",
        "message": "ðŸ¤” Hum! Didn't you forget to remove from \"console.log(...)\"?",
        "nonBlocking": true,
        "regex": "/^\\s*console\\.log/"
      }
    ]
  },
  "browserslist": [
    "last 2 version"
  ]
}